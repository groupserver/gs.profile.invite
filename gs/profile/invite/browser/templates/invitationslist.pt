<div xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal" id="invitations"
  tal:define="view options/view;
    more python:len(view.invitations) &gt; 1"
  tal:condition="options/view/invitations">
  <h2>Invitations</h2>
  <ul>
    <tal:block repeat="invitation view/invitations">
      <li class="invitation">
        <a href="invitations_respond.html">
          <span class="fn admin"
            tal:content="invitation/adminInfo/name">An administrator</span>
          has invited you to 
          <strong>join
            <span class="group"
              tal:content="invitation/groupInfo/name">a group</span>.<strong>
        </a>
      </li>
    </tal:block>
  </ul>
</div>

